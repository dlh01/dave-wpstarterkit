 # http://perishablepress.com/5g-blacklist-2012/comment-page-9/#comment-90018
 # http://wordpress.org/support/topic/troubleshooting-wordpress-35-master-list#post-3547424
 RewriteCond %{QUERY_STRING} \:         [NC]
